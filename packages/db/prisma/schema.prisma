generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  photo    String?
}

model Room {
  id        String     @id @default(uuid()) 
  name      String
  createdAt DateTime   @default(now()) 
  drawings  Drawing[]
}

model Drawing {
  id        String   @id @default(uuid())
  roomId    String
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  color     String
  size      Float
  type      String
  createdAt DateTime @default(now())
  points    Json?    
  startX    Float?   
  startY    Float?   
  width     Float?   
  height    Float?   
  centerX   Float?   
  centerY   Float?   
  radius    Float?     
}